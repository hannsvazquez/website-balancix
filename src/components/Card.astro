---
// get params  number, title, description
const { number, title, description } = Astro.props
---

<div
  class='flex relative px-4 transition bg-base-200/50 border border-base-300 dark:bg-base-900 dark:border-base-600/60 dark:hover:border-base-500 duration-500 flex-col gap-2 group hover:border-primary-300 overflow-hidden py-8 rounded-2xl text-center'
>
  <div
    class='rounded-full absolute inset-0 -translate-y-[70%] bg-primary-500 blur-2xl h-[26%] m-auto w-[26%]'
    aria-hidden='true'
  >
  </div><div class='flex relative justify-center'>
    <div
      class='flex rounded-full border bg-base-100/10 border-primary-300/10 dark:bg-base-800/10 p-3'
    >
      <div
        class='border rounded-full p-3 bg-base-100/40 border-primary-300/30 dark:bg-base-800/40'
      >
        <div
          class='border rounded-full p-3 bg-base-100/70 border-primary-300/50 dark:bg-base-800/70'
        >
          <span class='text-black font-bold text-xl'>{number ?? 0}</span>
        </div>
      </div>
    </div>
  </div><h3 class='inline font-semibold text-xl'>{title ?? ''}</h3><p
    class='dark:opacity-80 opacity-90'
  >
    {description ?? ''}
  </p>
</div>
