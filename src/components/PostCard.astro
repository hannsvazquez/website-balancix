---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  slug: string;
  lang: string;
  imgCard: string;
};

const { title, publishedAt, slug, lang, imgCard } = Astro.props;
---

<a
  class="group flex flex-col max-w-sm w-full rounded-xl border border-[#A3A1C5] bg-[#292933] p-4 transition-all duration-300 hover:-translate-y-2 hover:border-[#5228D7] shadow-md relative"
  href={`/${lang}/posts/${slug}`}
>
  <img
    src={imgCard}
    alt={title}
    class="rounded-lg w-full h-44 object-cover mb-4 border border-[#A3A1C5]/40"
    loading="lazy"
  />
  <div class="flex-1 flex flex-col gap-2">
    <p class="text-white text-base font-medium">{title}</p>
    <p class="text-[#A3A1C5] text-sm mb-2">{formatDate(publishedAt)}</p>
    <div class="flex justify-end mt-auto">
      <span class="text-[#A3A1C5] text-sm underline underline-offset-4 group-hover:text-[#5228D7] transition-colors">View more</span>
    </div>
  </div>
</a>
