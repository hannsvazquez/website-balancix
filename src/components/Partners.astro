---
type Role = {
  name: string
}

const startupRoles: Role[] = [
  {
    name: 'Customer Success Engineer'
  },
  {
    name: 'Brand & Community'
  },
  {
    name: 'Business Development'
  },
  {
    name: 'Product Marketing'
  },
  {
    name: 'Legal & Compliance'
  },
  {
    name: 'Talent Acquisition'
  },
  {
    name: 'Financial Analyst'
  },
  {
    name: 'Product Management'
  },
  {
    name: 'Growth'
  },
  {
    name: 'UX/UI Designer'
  }
]

// Split roles into chunks of 4
const roleChunks = [];
for (let i = 0; i < startupRoles.length; i += 5) {
  roleChunks.push(startupRoles.slice(i, i + 5));
}

import { translations } from "../i18n/translations.ts";


const lang = Astro.url.pathname.includes("/en/") ? "en" : "es";
---

<section
  class='max-w-[1440px] flex flex-col justify-center bg-vulcan-900 border-white/5 border-y py-5 items-center gap-10 overflow-hidden'
>
  <p>{translations[lang]["career.subtitle"]}</p>
  <div
    class='w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]'
  >
    <ul
      class='flex items-center justify-center md:justify-start [&_li]:mx-8 animate-infinite-scroll'
    >
      {
        roleChunks.map((chunk) => (
          <li class="flex gap-4">
            {chunk.map((role) => (
              <span class="text-white text-lg font-bold px-4 py-2 rounded-lg whitespace-nowrap">
                {role.name}
              </span>
            ))}
          </li>
        ))
      }
    </ul>
    <ul
      class='flex items-center justify-center md:justify-start [&_li]:mx-8 animate-infinite-scroll'
      aria-hidden='true'
    >
      {
        roleChunks.map((chunk) => (
          <li class="flex gap-4">
            {chunk.map((role) => (
              <span class="text-white text-lg font-bold px-4 py-2 rounded-lg whitespace-nowrap">
                {role.name}
              </span>
            ))}
          </li>
        ))
      }
    </ul>
  </div>
</section>
