---
interface Props {
  title: string;
  description: string;
  teamLabel: string;
}

const { title, description, teamLabel } = Astro.props;
---

<div class="min-h-screen flex items-center justify-center bg-background p-4">
  <div class="max-w-md w-full space-y-8 bg-gray-800/50 p-8 rounded-lg border border-gray-700">
    <div class="text-center">
      <h1 class="text-2xl font-bold text-white mb-4">{title}</h1>
      <p class="text-gray-300 mb-8">{description}</p>
    </div>
    
    <div class="space-y-4">
      <p class="text-gray-400 text-sm mb-4">Please select your language preference:</p>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a 
          href="/en/" 
          class="flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-primary/80 transition-colors"
        >
          English
        </a>
        <a 
          href="/es/" 
          class="flex items-center justify-center px-4 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-primary/80 transition-colors"
        >
          Espa√±ol
        </a>
      </div>
    </div>

    <div class="mt-8 text-center">
      <p class="text-sm text-gray-400">{teamLabel}</p>
    </div>
  </div>
</div>