---
import { translations } from "../i18n/translations.ts"

const lang = Astro.url.pathname.includes("/en/") ? "en" : "es";
---
<section class='relative overflow-hidden border-t border-white/5'>
  <div class='relative px-8 py-12 mx-auto max-w-[1440px] md:px-12 lg:px-32 lg:py-24'>
    <div
      class='flex justify-center items-center gap-6 p-8 overflow-hidden border lg:grid-cols-2 lg:gap-24 border-white/5 bg-vulcan-900/50 rounded-3xl lg:p-10'
    >
      <div class='text-center'>
        <p class='text-3xl font-normal tracking-tight text-white'>
          {translations[lang]["cta.main"]}
        </p>
        <p class='mt-4 text-base text-vulcan-300'>
          {translations[lang]["cta.description"]}
        </p>
        <div
          class='flex flex-col justify-center mt-12 sm:flex-row'
        >
          <a
            href='https://cal.com/hann-balancix/asesoria-gratis'
            target='_blank'
            class='rounded-lg px-4 py-2 text-sm font-semibold transition-all flex items-center justify-center text-white bg-primary hover:bg-primary/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary'
          >
            Book a call (15 min.)
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
