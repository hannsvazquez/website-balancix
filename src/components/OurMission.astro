---
import LinesBackground from './LinesBackground.astro'
import { translations } from "../i18n/translations"

const lang = Astro.url.pathname.includes("/en/") ? "en" : "es";

// You can change the image path as needed
const missionImage = "/Balancix-mission.jpeg";

---

<section
  class='relative max-w-[1440px] px-8 py-12 flex flex-col items-center justify-center gap-8 mt-4'
>
  <span
    class='text-lg text-transparent uppercase bg-gradient-to-r from-indigo-300 to-indigo-400 bg-clip-text px-5'
  >
    {translations[lang]["title.reviews"]}
  </span>
  <LinesBackground />
  <div class="flex flex-col items-center gap-8 w-full max-w-3xl z-10">
    <h3 class="text-3xl text-center font-normal leading-snug bg-gradient-to-r from-white to-[#a0aec0] bg-clip-text text-transparent">
      {translations[lang]["mission.phrase"]}
    </h3>
    <div class="w-16 h-1 rounded-full bg-secondary mx-auto mb-2"></div>
    <img 
      src={missionImage} 
      alt="la misiÃ³n de Balancix Academy" 
      class="rounded-large object-cover max-w-full max-h-[400px] shadow-lg" 
      style="background: #292933;" 
    />
  </div>
</section>
